                                <td data-field="startTime" class="start-time"> {{item.match.OldDateTime|datetime}}</td>
                                <td data-field="startDate" class="start-date hidden"> {{ item.match.StartTime|datetime }}</td>
                                <td class="livebet"><span class="badge">Live</span></td>
                                <td>1+</td>
                                <td data-field="teamVersus" class="team-versus">{{ item.match.HomeTeamName }} vs  {{ item.match.AwayTeamName }}</td>
                                <td><input type="button" class="' + oddHomeClass + '" value="{{(item.oddHome.Odd).toFixed(2)}}" data-odd-type="{{item.oddHome.BetOptionId }}" data-option-id="{{ item.oddHome.BetOptionId }}" data-option-name="{{item.oddHome.BetOption }}" data-bet-category="{{item.oddHome.BetCategory }}" /></td>
                                <td><input type="button" class="' + oddDrawClass + '" value="{{ (item.oddDraw.Odd).toFixed(2) }}" data-odd-type="{{ item.oddDraw.BetOptionId }}" data-option-id="{{ item.oddDraw.BetOptionId }}" data-option-name="{{ item.oddDraw.BetOption }}" data-bet-category="{{ item.oddDraw.BetCategory }}" /></td>
                                <td><input type="button" class="' + oddAwayClass }}" value="{{ (item.oddAway.Odd).toFixed(2) }}" data-odd-type="{{ item.oddAway.BetOptionId }}" data-option-id="{{ item.oddAway.BetOptionId }}" data-option-name="{{ item.oddAway.BetOption }}" data-bet-category="{{ item.oddAway.BetCategory }}" /></td>
                                <td class="livebet"><input type="button" class="btn btn-primary btn-xs moreodds" value="+{{ item.GameOdds.length }}" /></td>
                            </tr>


                        </tbody>
                    </table>


                </tbody>
