    <tabset>
        <tab heading="FT 1x2">
            <table class="table-striped table-hover" id="oddstable">
                <thead>
                    <tr></tr>
                </thead>
                <tbody id="match">
                    <table class="table-striped table-hover" id="oddstable">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Time</th>
                                <th colspan="3" style="text-align: center;">Info</th>
                                <th><b>1</b></th>
                                <th><b>X</b></th>
                                <th><b>2</b></th>
                                <th><b>More</b></th>
                            </tr>
                        </thead>
                        <tbody id="match">
                            <tr ng-repeat="item in oddCategoryRows" class="match" id=" {{ item.match.MatchNo }} ">
